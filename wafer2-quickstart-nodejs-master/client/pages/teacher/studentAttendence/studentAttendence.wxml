<picker class="pWorkers-item" mode="date" value="{{date}}" start="2017-01-01" end="2020-12-30" bindchange="dateChange">
    <view class="vDate">
        <view class="vLabeldate">{{date}}</view>
        <image src="/image/icons/down.png" mode="aspectFit"></image>
    </view>
</picker>

